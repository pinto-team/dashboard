// src/app/routes/router.tsx
import { createBrowserRouter } from 'react-router-dom'

import AppRoot from '@/app/App'
import { ROUTES } from '@/app/routes/routes'
import LoginPage from '@/features/auth/pages/LoginPage'
import DashboardPage from '@/features/dashboard/pages/DashboardPage'

import NotFound from './NotFound'
import ProtectedRoute from './ProtectedRoute'

{{#each entities}}
import {{Entities}}Page from '@/features/{{entities}}/pages/{{Entities}}Page'
import Add{{upper}}Page from '@/features/{{entities}}/pages/Add{{upper}}Page'
import Edit{{upper}}Page from '@/features/{{entities}}/pages/Edit{{upper}}Page'
{{/each}}

export const router = createBrowserRouter([
{
path: ROUTES.ROOT,
element: <AppRoot />,
children: [
{
element: <ProtectedRoute />,
children: [
{ index: true, element: <DashboardPage /> }, // default
{ path: ROUTES.DASHBOARD, element: <DashboardPage /> }, // /dashboard

{{#each entities}}
    { path: ROUTES.{{ENTITY_UPPER}}.LIST, element: <{{Entities}}Page /> },
    { path: ROUTES.{{ENTITY_UPPER}}.NEW, element: <Add{{upper}}Page /> },
    { path: ROUTES.{{ENTITY_UPPER}}.EDIT(), element: <Edit{{upper}}Page /> },
{{/each}}
],
},
{ path: ROUTES.LOGIN, element: <LoginPage /> },
{ path: '*', element: <NotFound /> },
],
},
])
